<h1>Product List</h1>
<h3>Product Categories</h2>
<ul>
  <% @categories.each do |category| %>
    <li><a href="?category=<%= category.name %>"><%= category.name %></a></li>

  <% end %>


</ul>

<div class="row">
<% @products.each do |product| %>

<div class="col-md-3">
  <div><a href="products/<%= product.id %>"><%= product.name %></a>
  </div>
  	<p><%= product.description %></p>
  	<p><%= product.friendly_price %></p>
  	<p><a href="products/<%= product.id %>/edit">
  	<img src="<%= product.photo %>" height="200" width="200"/>

<% if (@current_user) && (@current_user.admin == true) %>

  		<p>Edit Item</p></a>
  		<a data-method="delete" href="/products/<%=product.id %>" rel="nofollow">Delete Item</a>

<% end %>

  	</br>
  	</br>
  	</br>

  </p>
</div>

  	
<% end %>
</div>

